    <style>
        .cult {
            height: 70vh;
            margin-bottom: 23px;
        }

        .ov {
            position: relative;
            height: 100%;
            margin-bottom: 23px;
        }

        .image {
            display: block;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            top: 0;
            background-color: rgb(0, 0, 0, 0.5);
            overflow: hidden;
            width: 0;
            height: 100%;
            transition: .5s ease;
        }

        .ov:hover .overlay {
            width: 100%;
        }

        .text {
            color: white;
            font-size: 20px;
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            white-space: nowrap;
        }
    </style>
</head>

<body>
    <%- include('partials/navbar', {page:"reasons"}); -%>
    <section style="padding-bottom: 60px;">
